
<% include ../partials/header %>

<div class="container">

	  <div class="col-md-3">


		    <div class="list-group">
		     <li class="list-group-item active" >item1</li>
		     <li class="list-group-item">item2</li>
		     <li class="list-group-item">item4</li>
		     <li class="list-group-item">item5</li>
		    </div>


	   </div>

	  <div class="col-md-9">

		   <div class="thumbnail">

		        <img class="image-responsive" src="<%=camp.url%>">
		      <div class="caption-full">
		          <h4 class="pull-right">$9/Night<h4>
		          <h4><%=camp.name%></h4>

		          <% if(currentUser && camp.author.id.equals(currentUser._id)){%>
			             <a href="/campground/<%=camp._id%>/edit" class="btn btn-warning">Edit Camp</a>
			             <form class="delete-form"action="/campground/<%=camp._id%>?_method=DELETE" method="POST">
			             <input class="btn btn-danger" type="submit" value="delete">
			             </form>
			             <p><%=camp.desc%></p>
			             <p>

			        <%}%>
			       
			      
		           Submitted By:<em><%=camp.author.username%></em>

		          </p>
		       </div>
		     

              </div>

              <div class="well">

				    <div class="text-right">
			          <a href="/campground/<%=camp._id%>/comment/new" class="btn btn-success">leave a comment</a>

				    </div>

			        <div class="row">

			              
					          <%camp.comments.forEach(function(comment){%>
						            <div class="col-md-12">
							      
									      <strong><%=comment.author.username%></strong>

									      <span class="pull-right">10 days ago</span>

									      <p>
									          <%=comment.text %>
									      </p>
									      <%if(currentUser && comment.author.id.equals(currentUser._id)){%>
											      <a href="/campground/<%=camp._id%>/comment/<%=comment._id%>/edit"
											         class="btn btn-warning btn-xs">Edit</a>

												     <form class="delete-form" action="/campground/<%=camp._id%>/comment/<%=comment._id%>?_method=DELETE" method="POST">
												       <input type="submit" class="btn btn-danger btn-xs" value="Delete">
											       </form>
									      <% }%>

	                                 </div>

			                   <%});%>
			              
		             </div>

	           </div>
    </div>

</div>

<% include ../partials/footer %>