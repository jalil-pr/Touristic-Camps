<% include ../partials/header %>

<div class="container">
  
  <h1 class="text-center">add a new camp</h1>
  <div class="form-center">
     
       <form action="/campground" method="post">

         <div class="form-group">
            <input class="form-control" type="text"  name="name" placeholder="Camp Name">

         </div>
         <div class="form-group">
            <input class="form-control" type="number" min="0.1" step="0.1"  name="price" placeholder="Camp price">

         </div>
         <div class="form-group">
           <input class="form-control" type="text" placeholder="image url" name="url">

         </div>
         <div class="form-group">
            <input class="form-control" type="text" placeholder="description" name="desc">

         </div>


         <div class="form-group">
           <input type="submit" value="submit" class="form-control">

         </div>





      </form>
   </div>

</div>

<% include ../partials/footer %>